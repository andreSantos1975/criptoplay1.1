{
  "crons": [
    {
      "path": "/api/simulator/close-day?secret=${CRON_SECRET}",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/simulator/process-trades?secret=${CRON_SECRET}",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/process-alerts",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/monthly-reset?secret=${CRON_SECRET}",
      "schedule": "0 1 1 * *"
    }
  ]
}